doctype html
html
  head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#"
    - if content_for? :html_title
      title
        == yield :html_title
        |  | そくどく文庫
      meta property="og:title" content="#{yield :html_title}"
    - else
      title そくどく文庫
      meta property="og:title" content="そくどく文庫"
    - if content_for? :meta_description
      meta name="description" content="#{yield :meta_description}"
      meta property="og:description" content="#{yield :meta_description}"
    - else
      meta name="description" content="そくどく文庫は、本を読むのが遅い人でも楽に本を読む速度が早くなるサイトです📖ぜひ、気になる作品をそくどくしてみてください！"
      meta property="og:description" content="そくどく文庫は、本を読むのが遅い人でも楽に本を読む速度が早くなるサイトです📖ぜひ、気になる作品をそくどくしてみてください！"
    meta property="og:url" content="#{request.url}"
    - if request.path == root_path
      meta property="og:type" content="website"
    - else
      meta property="og:type" content="article"
    - if content_for? :ogp_image
      meta property="og:image" content="#{yield :ogp_image}"
    - else
      meta property="og:image" content="#{root_url}images/ogp.png"
    meta property="og:site_name" content="そくどく文庫"
    / Twitter 共通設定
    meta name="twitter:card" content="summary large image"
    meta name="twitter:site" content="@hatsu_38"
    / Facebook 用設定
    meta property="fb:app_id" content="455097465041946"
    = csrf_meta_tags
    = csp_meta_tag
    meta name="viewport" content="width=device-width, initial-scale=1"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    script src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    = yield :css_each_page
  body
    - if search_path != request.path_info
      = render 'layouts/header'
    = yield
    = render 'layouts/footer'
